package client;

import java.awt.EventQueue;

import shared.modal.User;
import client.communication.ClientCommunicator;
import client.facade.ClientFacade;
import client.login.*;


public class ClientGUI {

	public static void main(String[] args) {
		EventQueue.invokeLater(new Runnable() {
				public void run() {
					
					final String host = "localhost";
					final String port = "8080";
					
					RecordIndexerFrame mainFrame = new RecordIndexerFrame();
					LoginDialog loginDialog = new LoginDialog(mainFrame);
					loginDialog.addLoginListener(new LoginListener() {
						
						@Override
						public void userLoggedIn(User user) {
							// TODO Auto-generated method stub
							
						}
					});
					
					ClientCommunicator communicator = new ClientCommunicator(host, port);
					
					ClientFacade.setLoginDialog(loginDialog);
					ClientFacade.setMainFrame(mainFrame);
					ClientFacade.setClientCommunicator(communicator);
					
					loginDialog.setVisible(true);
					mainFrame.setVisible(true);

				}
			}
		);

	}
}
