package server;

import java.io.File;
import java.sql.*;

/**
 * Database class to handle Database SQL actions like connecting and accessing the Database
 * @author Raul Lopez Villalpando
 *
 */
public class Database {
	
	private static Connection connection;
	
	//Static Methods
	public static void initialize() {
		
		//Import the driver
		try {
			final String driver = "org.sqlite.JDBC";
			Class.forName(driver);
		} catch (ClassNotFoundException e) {
			
			System.out.println("Could not load Driver");
		}
		
	}
	
	
	//Constructors
	public Database() {
		connection = null;
	}
	
	//Methods
	public void startTransaction() throws DatabaseException{
		String dbNameString = "db" + File.separator + "indexerDB.sqlite";
		String dbURLString = "jdbc:sqlite:" + dbNameString;
		
		try {
			connection = DriverManager.getConnection(dbURLString);
			
			connection.setAutoCommit(false);
			
		} catch (SQLException e) {
			// TODO: handle exception
			throw new DatabaseException("Could start transaction", e);
		}
	}
	
	public void endTransaction(Boolean commit) throws DatabaseException{
		
		try {
			
			if (commit) {
				connection.commit();
			}
			else {
				connection.rollback();
			}
			
		} catch (SQLException e) {
			throw new DatabaseException("Could not end transaction", e);
		} finally {
			connection.close();
		}
		
		connection = null;
	}
	
	//Getters
	/**
	 * @return the connection
	 */
	public Connection getConnection() {
		return connection;
	}

	
	
}
