package client;

import java.awt.Dimension;
import java.awt.event.WindowAdapter;
import java.awt.event.WindowEvent;

import javax.swing.JFrame;
import javax.swing.JPanel;
import javax.swing.JSplitPane;


@SuppressWarnings("serial")
public class RecordIndexerFrame extends JFrame {
		
	public RecordIndexerFrame() {
		super();
		
		setupGUI();
	}
	
	public void setupGUI() {
		
		this.setSize(new Dimension(800, 700));
		this.setLocationRelativeTo(null);
		
		JSplitPane splitPane = new JSplitPane(JSplitPane.HORIZONTAL_SPLIT, true, new JPanel(), new JPanel());
		splitPane.setDividerLocation(this.getSize().height/2);
		this.add(splitPane);
		
		//Window closing
		this.addWindowListener(new WindowAdapter() {
			@Override
		    public void windowClosing(WindowEvent windowEvent) {
		        System.exit(0);
		    }
		});
	}
	
	//Getters and Setters
	
}
